<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit data entry</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <center>
        <form method="post" action="/updateData" enctype="multipart/form-data">
            <table border="1">
            
                    <tr>
                        <td>Name</td>
                        <td><input type="text" name="name" value="<%= single.name %>"></td>
                    </tr>
                    <tr>
                        <td>Files</td>
                        <td>
                            <% single.avtar.forEach((img, j) => { %>
                                <div class="box">
                                    <img src="<%= img %>" alt="" width="50px">
                                    <a href="/deleteImg?id=<%= single._id %>&index=<%= j %>">DELETE</a> ||
                                    <a href="/editImg?id=<%= single._id %>&index=<%= j %>">Edit</a> 
                                    
                            <% }) %>
                        </td>
                    </tr>
                    <tr>
                        <td>City</td>
                        <td>
                            <select name="city" id="">
                                <option value="">--select--</option>
                                <% city = ["Surat", "Rajkot", "Bhavnagar", "Vadodara"]; %>
                                <% city.forEach((val) => { %>
                                    <option <% if (single.city == val) { %> selected <% } %> value="<%= val %>"><%= val %></option>
                                <% }) %>
                            </select>
                        </td>
                    </tr>

                <tr>
                    <td colspan="2">
                        <input type="submit">
                    </td>
                </tr>
            </table>
            <a href="/"> View Data </a>
        </form>
    </center>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
</body>

</html>
