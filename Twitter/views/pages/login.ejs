                    <!-- <div>
                      <img src="/public/img/eye.svg" id="c_pass" alt="showPassword">
                    </div> -->
                    <!-- <span class="input_name">Password</span> -->
                  </div>
                </div>
                <div>
                  <!-- <a class="next_btn f_15_18_500 d-block text-center black_color w-100" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal">Next</a> -->
                  <button class="text-center black_color w-100" type="submit">Submit</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>


  </section>
  <script src="/Assets/js/bootstrap.bundle.min.js"></script>
  <script src="/Assets/js/jquery-3.7.0.min.js"></script>
  <!-- for popup screen  -->
  <script>
    $(document).ready(function () {
      // Event handler for showing the modal
      $('#exampleModalToggle').click('show.bs.modal', function () {
        // Add a class to the body to change the background color
        $('#mainBody').addClass('modal-open-bg');
      });

      // Event handler for hiding the modal
      $('#exampleModalToggle').on('hidden.bs.modal', function () {
        // Remove the class to revert the background color
        $('#mainBody').removeClass('modal-open-bg');
      });
    });
  </script>
</body>

</html>