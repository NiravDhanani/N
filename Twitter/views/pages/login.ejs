            </div>
            <div class="singin">
              <h4 >Already have an account?</h4>
              <button class="singin-btn" data-bs-target="#exampleModalToggle3" data-bs-toggle="modal"> Sign in </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- for creating new account  -->
    <form action="/addUser" method="post" class="register-form" enctype="multipart/form-data">
      <div class="modal fade" id="exampleModalToggle" aria-hidden="true" data-bs-backdrop="static"
        aria-labelledby="exampleModalToggleLabel" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header justify-content-start">
              <button type="button" class="btn-close d-flex justify-content-center align-items-center white_color"
                data-bs-dismiss="modal" aria-label="Close" style="margin: 0;"><i class="fa-solid fa-xmark"></i></button>
              <h1 class="modal-title ms-3 fs-5 white_color" id="exampleModalToggleLabel">Step 1 of 2</h1>
            </div>
            <div class="modal-body mx-5">
              <div class="modal_body_contetnt">
                <div>
                  <h3 class="white_color">Create your account</h3>
                </div>
                <div>
                  <div class="position-relative my-4">
                    <input type="text" name="name" id="name" placeholder="Name" class="white_color w-100">
                    <!-- <span class="input_name">Name</span> -->
                  </div>
                  <div class="position-relative my-4">
                    <input type="tel" name="email" id="email" placeholder="Email" class="white_color w-100" required>
                    <!-- <span class="input_name">Email</span> -->
                  </div>
                  <div class="position-relative my-4">
                    <input type="tel" name="phone" id="phone" placeholder="phone" class="white_color w-100" required>
                    <!-- <span class="input_name">Phone</span> -->
                  </div>
                  <div class="position-relative my-4">
                    <input type="file" name="image" id="" placeholder="upload file" class="white_color w-100" required>
                    <!-- <span class="input_name">Phone</span> -->
                  </div>

                  <!-- <div class="position-relative my-4">
                                <input type="date" name="dob" id="dob">
                                <span class="input_name">Date of birth</span>
                            </div> -->
                </div>
                <div>
                  <a class="next_btn f_15_18_500 d-block text-center black_color w-100 "
                    data-bs-target="#exampleModalToggle2" data-bs-toggle="modal" style="cursor: pointer;">Next</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="exampleModalToggle2" aria-hidden="true" data-bs-backdrop="static"
        aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header justify-content-start">
              <button type="button" class="btn-close d-flex justify-content-center align-items-center white_color"
                data-bs-target="#exampleModalToggle" data-bs-toggle="modal" style="margin: 0;"><i
                  class="fa-solid fa-arrow-left"></i></button>
              <h1 class="modal-title ms-3 fs-5 white_color" id="exampleModalToggleLabel">Step 2 of 2</h1>
            </div>

            <div class="modal-body mx-5">
              <div class="modal_body_contetnt">
                <div>
                  <h3 class="white_color">Create your account</h3>
                </div>
                <div>
                  <div class="position-relative my-4">
                    <input type="password" name="password" id="password" placeholder="Password"
                      class="white_color w-100">
                  </div>
                  <div class="position-relative my-4">
                    <input type="password" name="c_password" id="c_password" placeholder="Confirm Password"
                      class="white_color w-100">
                  </div>
                </div>
                <div>
                  <!-- <a class="next_btn f_15_18_500 d-block text-center black_color w-100" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal">Next</a> -->
                  <button class="submit-btn  d-block text-center  w-100" type="submit">Submit</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>


    <!-- for singup  -->
    <form action="/loginUser" method="post" class="register">
      <div class="modal fade" id="exampleModalToggle3" aria-hidden="true" data-bs-backdrop="static"
        aria-labelledby="exampleModalToggleLabel3" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header justify-content-start">
              <button type="button" class="btn-close d-flex justify-content-center align-items-center white_color"
                data-bs-dismiss="modal" aria-label="Close" style="margin: 0;"><i class="fa-solid fa-xmark"></i></button>
              <!-- <h1 class="modal-title ms-3 fs-5 white_color" id="exampleModalToggleLabel">Step 2 of 2</h1> -->
            </div>
            <div class="modal-body mx-5">
              <div class="modal_body_contetnt">
                <div>
                  <h3 class="white_color">Login your account</h3>
                </div>
                <div>
                  <div class="position-relative my-4">
                    <input type="email" name="email" placeholder="Email"  class="white_color w-100"
